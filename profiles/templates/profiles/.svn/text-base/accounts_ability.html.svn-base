{% extends "base.shtml"%}
{% load i18n %}{% load comments %}{% load thumbnail %}{% load taggit_extras %}
{% block title %}修改个人技能{% endblock %}

{% block extra_include %}
	{% include "style.html" %}
	{% include "style-form.html" %}
	{% include "style-person.html" %}
{% endblock %}

{% block content %}
<body class="p-project-create si">{% include "inc/navi.html" %}
	<form class="master" method="post">
		<h2>修改个人技能</h2>
		{% for f_ability in f_abilities %}
		<div class="label">
			<span>{{f_ability.tab_name}}</span>
			{% for ability in abilities %}
				{% if ability in f_ability.subtab.all %}
					<label><input type="checkbox" name="ability" value="{{ability.id}}" {% if ability in user_abilities %}checked="true"{% endif %} {% if ability.sub_name == '围观的能力' %}checked="true" onclick='alert("不能取消该技能"); return false;'{% endif %}/>{{ability.sub_name}}</label>		
				{% endif %}
			{% endfor %}
		</div>
		{% endfor %}
		<div class="label submit">
			<input type="button" value="编辑资料" onclick="window.location.href='{% url ShowProfile %}'"/>
			<input type="button" value="编辑头像" onclick="window.location.href='{% url EditAvatar %}'"/>
		</div>
		<div class="label submit">
			<input type="submit" value="保存"/>
		</div>
	</form>
{% include "inc/footer.html" %}
</body>
{% endblock %}