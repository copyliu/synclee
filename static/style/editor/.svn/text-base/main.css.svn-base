@charset "utf-8";
/* RE-DEFINED HTML TAGS */
* {margin:0; padding:0;}
body {
	background: #FFF;
	color:#000;
	font-family: Arial, Helvetica, sans-serif;
	font-size: 80%;
	line-height: 1.4em;
	padding:5px;
}
fieldset {
	border: none;
}
fieldset.submit {
	margin-top: 1.5em;
	text-align: center;
}

/* OBJECT TAGS */
#content {
	clear:both;
}

/* CLASSES */
.clearer {
	clear: both;
	height: 1px;
	font-size: 1px;
	line-height: 1px;
}
.hidden {
	position:absolute;
	left: -10000px;
}