div.issues {
	margin: 1em 0
}
div.issues>ol.list{
	clear: left;
	list-style: none;
	margin: 0;
	padding: 0;
}
div.issues>ol.list>li {
	margin: 0;
	padding: 4px 4px 4px 48px;
	position: relative;
	min-height: 40px;
	font-size: 90%;
	border-top: 1px dotted #ddd;
}
div.issues > .pager { padding: 0.4em; border-top: 1px dotted #ddd }

div.issues .list li span.image {
	position: absolute;
	top: 4px;
	left: 4px;
	width: 40px;
	height: 40px;
	overflow: hidden;
	box-shadow: rgba(0,0,0,0.05) 0 0 0 1px, rgba(0,0,0,0.1) 0 1px 10px;
}
div.issues .list strong {
	position: absolute;
	width: 2em;
	height: 2em;
	left: 1.4em;
	top: -0.4em;
	display: block;
	color: white;
	background: #002C92;
	text-align: center;
	line-height: 2;
	border-radius: 2em;
	outline: none;
	box-shadow: rgba(255, 255, 255, 0.6) 0 0 0 2px;
}
div.issues .list li span.image>img {
	width: 40px;
	max-height: 300px;
	min-height: 40px;
}
div.issues .list cite a,
div.issues .list span.meta a,
div.issues.closed a,
div.issues.closed > h3
{
	color: #666
}
div.issues .list span.meta {
	color: #999;
	display: block;
	font-size: smaller;
}

div.issues.closed {
	background: #f7f7f7;
	border-top-color: #aaa;
}

div.issues > h3 {
	font-size: 1em;
	margin: 0;
	padding: 0.4em;
	color: #002C92;
}
div.issues.closed .pager li.current > a {
	color: white;
	background: #999
}
