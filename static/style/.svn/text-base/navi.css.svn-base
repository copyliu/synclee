#headarea {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	height: 48px;
	background: white;
	border-bottom: 1px solid #ddd;
	z-index: 2000;
	font-size: 14px;
}
#branding, #navigation, #navSearch {
	line-height: 48px;
	font-size: 100%;
	margin: 0;
	padding: 0;
}
#navigation {
	list-style: none;
	float: left;
}

#branding {
	float: left;
	padding: 0;
	margin-right: 1em;
}
#branding > a {
	display: block;
	padding-left: 48px;
	background: white url(image/40-logo.gif) no-repeat 4px 4px;
}
#navigation li {
	float: left;
}
#navigation li a {
	padding: 0 0.5em;
	display: block;
	color: #666;
	text-decoration: none;
}
#navigation li a:hover {
	color: #002C92;
	background: #ddd;
}

#navSearch {
	float: left;
	margin: 0 0.5em;
}
#navSearch input {
	font-size: small;
	padding-top: 3px;
	padding-bottom: 3px;
}
#navSearch input[type=text] { width: 10em }


#userarea {position: absolute; right: 0; top: 0;}
#userarea>div.menu {
	float: right;
	margin: 0;
	padding: 0;
	position: relative;
}
#userarea>div.menu>.button {
	position: relative;
	line-height: 48px;
	height: 48px;
	padding: 0;
	margin: 0;
}

#userarea>div.menu:hover {
	background: #323
}


#userarea>.menu .sub {
	list-style: none;
	margin: 0;
	padding: 0.4em 0;
	position: absolute;
	top: 48px;
	right: 0;
	min-width: 200px;
	background: #323;
	color: #ddd;
	border-bottom-left-radius: 3px;
	border-bottom-right-radius: 3px;	
	z-index: -1;
	overflow: hidden;
}


#userarea>div.menu>.button a {
	text-decoration: none;
	display: block;
	padding: 0 1em;
	color: #666;
}
#userarea>div.menu:hover >.button a {
	color: #ddd;
}
#userarea>.menu .sub li {
	line-height: 1.5;
}
#userarea>.menu .sub li.split {
	padding-bottom: 0.2em;
	border-bottom: 1px solid #101;
}
#userarea>.menu .sub li.split+li{
	padding-top: 0.2em;
	border-top: 1px solid #545;
}
#userarea>.menu .sub a {
	padding: 0.3em 0.7em;
	color: #ddd;
	text-decoration: none;
	font-size: smaller;
	display: block;
}
#userarea>.menu .sub a:hover {
	background: #545;
}

#userarea>.menu.user { padding-right: 48px }

#userarea>.menu .sub { display: none }
#userarea>.menu:hover .sub { display: block }

#userarea .avatar { 
	display: block;
	height: 40px;
	width: 40px;
	padding: 4px;
	position: absolute;
	right: -48px;
}

.browse-path, 
.browse-path ul {
	list-style: none;
	margin: 0;
	padding: 0;
}
.browse-path{
	overflow: auto;
	font-size: smaller;
	line-height: 1.5;
	padding: 0.4em 0;
}
.browse-path ul:before {
	content: " / "
}
.browse-path li,
.browse-path ul,
.browse-path li > a{
	display: inline;
}

.snav {
	margin-bottom: 1.5em;
	border: none;
	border-bottom-right-radius: 4px;
	border-bottom-left-radius: 4px;
	overflow: hidden;
}
.snav a { color: #564887 }
.snav > .browse-path {
	padding: 0 0.4em;
	line-height: 30px;
}
.snav > .browse-path ul {
	display: inline-block;
	padding-left: 24px;
	background: url(image/snav-slash.png) no-repeat left center;
}
.snav > .browse-path ul:before {content:""; display: none}
.snav > .browse-path h1, .snav > .browse-path h2 {
	display: inline;
	font-size: 1em;
}

form[id$=Search] > input[type=submit] {
	padding-left: 24px;
	background: #002C92 url(image/icon/w-search.png) no-repeat 4px center;
}
