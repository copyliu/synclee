{% extends "base.shtml"%}
{% load i18n %}{% load comments %}{% load thumbnail %}{% load taggit_extras %}
{% block title %}登陆{% endblock %}

{% block extra_include %}
	{% include "style.html" %}
	{% include "style-form.html" %}
	{% include "style-person.html" %}
	{% include "forms.html" %}
{% endblock %}

{% block content %}
<body class="p-project-create si">{% include "inc/navi.notlogin.html" %}
	<form class="master" method="post" action="." id="vform">
		<h2>登陆</h2>
                <!--
		<label class="required">
			<span>用户名</span>
			<input id="id_username" type="text" name="username" maxlength="30" /> <em>* 此项必须填写</em>
		</label>
                -->
                <label class="required">
			<span>Email 地址</span>
			<input class="validate[required]" id="id_email" type="text" class="required" name="email" maxlength="75" /> <em>* 此项必须填写</em>
		</label>
                <label class="required">
			<span>密码</span>
			<input class="validate[required]" type="password" name="password" id="id_password" /> <em>* 此项必须填写</em>
		</label>
		<div class="label submit">
			<input type="button" value="忘记密码" onclick="window.location.href='{% url auth_password_reset %}'"/>
			<input type="button" value="还没有注册？" onclick="window.location.href='{% url registration_register %}'"/>
		</div>
		<div class="label submit">
			<input type="submit" value="登陆"/>
                        <input type="hidden" name="next" value="/" />
		</div>
	</form>
{% include "inc/footer.html" %}
</body>
{% endblock %}
