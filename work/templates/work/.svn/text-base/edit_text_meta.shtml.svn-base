{% extends "base.shtml"%}
{% load i18n %}{% load comments %}{% load thumbnail %}{% load taggit_extras %}
{% block title %}修改章节信息{% endblock %}

{% block extra_include %}
	{% include "style.html" %}
	{% include "style-form.html" %}
	{% include "style-project.html" %}
{% endblock %}

{% block content %}
<body class="p-chapter-create si">{% include "inc/navi.html" %}
	<!-- 新建图集页就不做了…… 都差不多  -->
	<div class="snav">
				<div class="project-info">
		{% include "inc/project/info.shtml" %}
		</div>
		<ul class="browse-path">
			<li><a href="{{work.get_absolute_url}}">{{work.name}}</a><ul>
				<li><h1><a href=".">修改章节</a></h1></li>
			</ul></li>
		</ul>
	</div>

	<form class="master" method="post">
		<h2>修改章节 {{chapter.name}}  <a href="#" class="remove" id="del_text">[删除章节]</a></h2>

		<label class="required">
			<span>章节标题</span> <input name="title" type="text" value="{{chapter.title}}"/>
		</label>
		<label>
			<span>描述文字</span>  <textarea name="abstract" id="abstract">{{chapter.abstract}}</textarea>
		</label>
		<div class="label submit">
			<input type="button" onclick="location.href='{% url EditWorkTextSection work.id %}?text_id={{chapter.id}}'" value="编辑段落"/>
			<input type="button" onclick="location.href='{% url SyncWorkText work.id %}?text_id={{chapter.id}}'" value="同步章节"/>
			<input id="tid" type="hidden" value="{{chapter.id}}"/>
			<input id="wid" type="hidden" value="{{chapter.work.id}}"/>
			<input type="submit" value="确认"/>
		</div>
	</form>
	

{% include "inc/footer.html" %}</body>
{% endblock %}
