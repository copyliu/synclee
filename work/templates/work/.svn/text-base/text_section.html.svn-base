<div class="middle" id="section_general">
{% if pre %}
<div class="section pending" chapter="{{text_chapter.id}}" work="{{work.id}}" pre_id="{{pre.id}}" id="pre" >
        <div class="view-content text">
                <h2>{{pre.title}}</h2>
        </div>
</div>
<div class="section loadMore prev">
        <button class="btnLoadPreText">显示前面的内容</button>
</div>
{% else %}
<div class="section loadMore prev">
        <button class="btnLoadNoMore">这是第一篇文字</button>
</div>
{% endif %}
<div class="section" id="sec-01">
        {% include "inc/view/text.html" %}
</div>
{% if nexts|length != 0 %}
<div class="section loadMore next">
        <button class="btnLoadNextText">显示后面的内容</button>
</div>

{% for next in nexts %}
<div class="section pending" chapter="{{text_chapter.id}}" work="{{work.id}}" next_id="{{next.id}}" id="next">
        <div class="view-content text">
                <h2>{{next.title}}</h2>
        </div>
</div>
{% endfor %}
{% else %}
<div class="section loadMore next">
        <button class="btnLoadNoMore">这是最后一篇文字</button>
</div> 
{% endif %}
</div>