{% extends "base.shtml"%}
{% load i18n %}{% load comments %}{% load thumbnail %}{% load taggit_extras %}
{% block title %}作者群 - {{work.name}}{% endblock %}

{% block extra_include %}
	{% include "style.html" %}
	{% include "style-project.html" %}
        {% include "style-person.html" %}
{% endblock %}

{% block content %}
<body class="p-authors si">
	{% if user.is_authenticated %}
	{% include "inc/navi.html" %}
	{% else %}
	{% include "inc/navi.notlogin.html"%}
	{% endif %}
	<div class="slave">
		<div class="snav">
				<div class="project-info">
		{% include "inc/project/info.shtml" %}
		</div>
		{% include "inc/project/links_inner.shtml" %}
		</div>
	</div>
	<div class="master">
		<ul class="authors">
			<li class="chief">
				<h3>主创</h3>
				{% include "inc/person/profile.founder.html" %}
			</li>
			{% if member.count > 0 %}
			<li>
				<h3>参与</h3>
				{% for m in member %}
				{% include "inc/person/profile.member.html" %}
				{% endfor %}
			</li>
			{% endif %}
		</ul>
		{% if user != work.founder and not user in member %}
		<div class="clear actions">
			<a href="{% url ApplyWorkMember work.id %}" class="button">申请加入</a>
		</div>
		{% endif %}
	</div>
	{% include "inc/footer.html" %}
</body>
{% endblock %}