{% load thumbnail %}
<div class="vcard profile">
	<h2 class="fn"><a href="."><img class="avatar logo" src="/uploads/{% thumbnail m.get_profile.avatar 40x40 %}" />{{m.get_profile.get_name}}</a></h2>
	<dl class="meta">
		<dt>介绍</dt>
		<dd>{{m.get_profile.intro}}</dd>
		<dt>位置</dt>
		<dd>{{m.get_profile.location}}</dd>
	</dl>
	<dl class="meta">
		<!--
		<dt>参与的社团</dt>
                {% for c in m.club_in.all %}
		<dd><a href="{{club.get_absolute_url}}">{{c.name}}</a></dd>
		{% empty %}
                <dd>还没有参与任何社团</dd>
                {% endfor %}
		-->
		<dt>技能</dt>
		<dd>
			<ul class="abilities">
                            {% for a in m.get_profile.get_f_ability %}
				<li class="{{a.get_icon}}" title="{{a.tab_name}}">{{a.tab_name}} <strong>Lv1</strong></li>
                            {% endfor %}
			</ul>
		</dd>
	</dl>
	<div class="clear"></div>
</div>
