{% load thumbnail %}
<div class="vcard profile">
	<h2 class="fn"><a href="."><img class="avatar logo" src="/uploads/{{the_user.get_profile.get_cover.url}}" />{{the_user.get_profile.get_name}}</a></h2>
	<dl class="meta">
		<dt>介绍</dt>
		<dd>{{the_user.get_profile.intro}}</dd>
		<dt>位置</dt>
		<dd>{{the_user.get_profile.location}}</dd>
	</dl>
	<dl class="meta">
		<!--
		<dt>参与的社团</dt>
		<dd><a href="club.shtml">Eynfenia Ecosystem Primus</a></dd>
		<dd><a href="club.shtml">XXXTeam</a></dd>
	-->
		<dt>技能</dt>
		<dd>
			<ul class="abilities">
				{% for a in the_user.get_profile.get_f_ability %}
				<li class="{{a.get_icon}}" title="{{a.tab_name}}">{{a.tab_name}} <strong>Lv1</strong></li>
				{% endfor %}
			</ul>
		</dd>
	</dl>
	<div class="clear"></div>
</div>
