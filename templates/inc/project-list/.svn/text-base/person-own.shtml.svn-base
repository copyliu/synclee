{% load thumbnail %}
<div class="projects own">
	<h2>主创作品 ({{the_user.own_work.all.count}})</h2>
	<ul class="list recommended">
		{% for work in the_user.own_work.all %}
		{% if forloop.count < 6 %}
		<li><a href="{{work.get_absolute_url}}"><img src="/uploads/{% thumbnail work.cover 200x200 %}"/><span class="caption">{{work.name}}</span></a></li>
		{% endif %}
		{% endfor %}
	</ul>
	<a class="more" href="/search/?query=&author={{the_user.get_profile.get_name}}">全部...</a
</div>
