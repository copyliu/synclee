{% load thumbnail %}
{% ifequal user work.founder %}
<label class="project-action"><button class="add issue" onclick="location.href='{% url AddWorkIssue work.id %}'">发起</button></label>
{% endifequal %}
<div class="issues">
	<h3>生效中</h3>
	<ol class="list">
		{% for i in issues %}{% if i.is_open %}
		<li class="active">
			<cite><span class="image"><img class="avatar" src="/uploads/{% thumbnail i.auther.get_profile.avatar 40x40 %}"/></span></cite>
			<a href="{% url ViewWorkIssue work.id i.id %}">{{i.title}}</a>
			<span class="meta"><a href="{% url People i.auther.username %}">{{i.auther.get_profile.get_name}}</a>, {{i.date|timesince}}前</span>
		</li>
		{% endif %}
		{% empty %}
		<li class="active">
			<cite>没有活动的任务单</cite>
		</li>
		{% endfor %}
	</ol>
	{% include "inc/pager.html" %}
</div>
<div class="issues closed">
	<h3>已关闭</h3>
	<ol class="list">
		{% for i in issues %}{% if not i.is_open %}
		<li class="active">
			<cite><span class="image"><img class="avatar" src="/uploads/{% thumbnail i.auther.get_profile.avatar 40x40 %}"/></span></cite>
			<a href="{% url ViewWorkIssue work.id i.id %}">{{i.title}}</a>
			<span class="meta"><a href="{% url People i.auther.username %}">{{i.auther.get_profile.get_name}}</a>, {{i.date|timesince}}前</span>
		</li>
		{% endif %}
		{% empty %}
		<li class="active">
			<cite>没有被关闭的任务单</cite>
		</li>
		{% endfor %}
	</ol>
	<!-- % include "inc/pager.html" % -->
</div>
