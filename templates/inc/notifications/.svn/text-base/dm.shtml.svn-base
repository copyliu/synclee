<ol class="list">
	{% for mail in mails %}
	<li class="dm">
		<cite>{% if mail.status == 'unread'%}<strong>{% endif %}{{mail.title}}{% if mail.status == 'unread'%}</strong>{% endif %} <a href="/{{mail.sender.username}}/"><span class="image"><img class="avatar" src="/uploads/{{mail.sender.get_profile.avatar}}"/></span>{{mail.sender.get_profile.get_name}}</a></cite>
		<span class="meta"><a href="{% url ViewMessage %}?mail_id={{mail.id}}">查看</a> | {{mail.date|timesince}}前</span>
	</li>
	{% empty %}
		<blockquote>没有邮件</blockquote>
	{% endfor %}
</ol>