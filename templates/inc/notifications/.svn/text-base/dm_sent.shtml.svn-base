<ol class="list">
	{% for mail in mails %}
	<li class="dm">
		<cite><a href="/{{mail.receiver.username}}/"><span class="image"><img class="avatar" src="/uploads/{{mail.receiver.get_profile.avatar}}"/></span>{{mail.receiver.get_profile.get_name}}</a></cite>
		<span class="meta"><a href="{% url ViewMessage %}?mail_id={{mail.id}}">查看</a> | {{mail.date|timesince}}前</span>
		<blockquote>{{mail.content}}</blockquote>
	</li>
	{% empty %}
		<blockquote>没有邮件</blockquote>
	{% endfor %}
</ol>