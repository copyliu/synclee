{% extends "message/base.html" %}
{% block title %}查看邮件{% endblock %}

{% block messagebody %}
<div class="master">
        <div id="dm" class="notification-type timeline">
            <h3>查看邮件</h3>
            <ol class="list">
                <li class="dm">
                    <cite>{% if not mail.is_read %}<strong>{% endif %}{{mail.title}}{% if not mail.is_read %}</strong>{% endif %} <a href="{{mail.sender.get_absolute_url}}"><span class="image"><img class="avatar" src="/uploads/{{mail.sender.get_profile.avatar}}"/></span>{{mail.sender.get_profile.get_name}}</a></cite>
                    <span class="meta"><a href="{% url WriteMessage %}?username={{mail.sender.username}}">回信</a> | {{mail.date|timesince}}前</span>
                    <blockquote>{{mail.body}}</blockquote>
                </li>
            </ol>
        </div>
</div>
{% endblock %}